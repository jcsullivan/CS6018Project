<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="700dip" />
            <stroke android:width="3dip" android:color="#000000" />
            <gradient android:angle="-90" android:startColor="#F4F7C5" android:endColor="#F4F7C5"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="700dip" />
            <stroke android:width="3dip" android:color="#2ec1ac" />
            <solid android:color="#F4F7C5"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="700dip" />
            <stroke android:width="3dip" android:color="#707070" />
            <gradient android:angle="-90" android:startColor="#F4F7C5" android:endColor="#F4F7C5" />
        </shape>
    </item>
</selector>